{
  "local": {
    "provider": "local",
    "module": "passport-local",
    "usernameField": "username",
    "passwordField": "password",
    "authPath": "/auth/local",
    "successRedirect": "/auth/account",
    "failureRedirect": "/local"
  },
  "adfs": {
    "provider": "adfs",
    "module": "passport-saml",
    "entryPoint": "https://fs.echoent.com.au/adfs/ls/integrated",
    //Below signout url is for AFDFS3 only
    //"exitPoint": "https://fs.echoent.com.au/adfs/ls/?wa=wsignoutcleanup1.0",
    "exitPoint": "https://fs.echoent.com.au/adfs/ls/?wa=wsignout1.0",
    "issuer": "https://echo-sharedcalendar.azurewebsites.net",
    "callbackUrl": "https://echo-sharedcalendar.azurewebsites.net/auth/adfs/callback",
    "identifierFormat": null,
    "authPath": "/auth/adfs",
    "successRedirect": "/auth/adfs/success",
    "failureRedirect": "/login",
    "link": false,
    "acceptedClockSkewMs":-1,
    "authScheme":"adfs"
  }
}
